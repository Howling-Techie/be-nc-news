{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      "topic"
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the specified articles",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments from the article specified, newest first",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "body": "This is a bad article name",
          "votes": 1,
          "author": "butter_bridge",
          "article_id": 6,
          "created_at": "2020-10-11T15:23:00.000Z"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the comment specified"
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Posts a comment to the given article",
    "queries": [],
    "exampleBody": {
      "username": "lurker",
      "body": "My first post!"
    },
    "exampleResponse": {
      "comment": [
        {
          "article_id": 1,
          "comment_id": 42,
          "votes": 0,
          "created_at": "2023-08-01T11:59:13.341Z",
          "author": "lurker",
          "body": "My first post!"
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "exampleResponse": {
      "users": [
        {
          "username": "lurker",
          "name": "do_nothing",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      ]
    }
  }
}
