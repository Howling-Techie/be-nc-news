{
  "openapi": "3.0.3",
  "info": {
    "title": "Northcoders News API",
    "description": "API for the backend project Northcoders News",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://nc-news-8ccb.onrender.com"
    }
  ],
  "paths": {
    "/api/topics": {
      "get": {
        "summary": "Get an array of all topics",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topics": {
                      "type": "array",
                      "description": "Array of topics",
                      "items": {
                        "type": "object",
                        "description": "A topic covered on the site",
                        "properties": {
                          "slug": {
                            "type": "string",
                            "description": "Name of the topic"
                          },
                          "description": {
                            "type": "string",
                            "description": "Information about the topic"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get an array of all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "description": "Array of users",
                      "items": {
                        "type": "object",
                        "description": "A user registered on the site",
                        "properties": {
                          "username": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "avatar_url": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{username}": {
      "get": {
        "summary": "Get the specified user",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "description": "A user registered on the site",
                      "properties": {
                        "username": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "avatar_url": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/comments/{comment_id}": {
      "delete": {
        "summary": "Delete the specified comment",
        "parameters": [
          {
            "name": "comment_id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          }
        }
      },
      "patch": {
        "summary": "Update a comment's vote count",
        "parameters": [
          {
            "name": "comment_id",
            "in": "path",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "inc_votes": {
                    "required": true,
                    "type": "integer",
                    "description": "Amount to increment vote count by"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "comment": {
                      "type": "object",
                      "description": "The updated comment",
                      "properties": {
                        "comment_id": {
                          "type": "integer"
                        },
                        "body": {
                          "type": "string"
                        },
                        "votes": {
                          "type": "integer"
                        },
                        "author": {
                          "type": "string"
                        },
                        "article_id": {
                          "type": "integer"
                        },
                        "created_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/articles": {
      "get": {
        "summary": "GET api/articles",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/articles/{article_id}": {
      "get": {
        "summary": "GET api/articles/{article_id}",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "patch": {
        "summary": "PATCH api/articles/{article_id}",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/articles/{article_id}/comments": {
      "get": {
        "summary": "GET api/articles/{article_id}/comments",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "comments": {
                      "type": "array",
                      "description": "Array of comments",
                      "items": {
                        "type": "object",
                        "description": "The updated comment",
                        "properties": {
                          "comment_id": {
                            "type": "integer"
                          },
                          "body": {
                            "type": "string"
                          },
                          "votes": {
                            "type": "integer"
                          },
                          "author": {
                            "type": "string"
                          },
                          "article_id": {
                            "type": "integer"
                          },
                          "created_at": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "POST api/articles/{article_id}/comments",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api": {
      "get": {
        "summary": "GET api",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}