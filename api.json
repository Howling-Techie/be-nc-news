{
  "openapi": "3.0.3",
  "info": {
    "title": "Northcoders News API",
    "description": "API for the backend project Northcoders News",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://nc-news-8ccb.onrender.com"
    }
  ],
  "paths": {
    "/api/topics": {
      "get": {
        "summary": "Get an array of all topics",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topics": {
                      "type": "array",
                      "description": "Array of topics",
                      "items": {
                        "type": "object",
                        "description": "A topic covered on the site",
                        "properties": {
                          "slug": {
                            "type": "string",
                            "description": "Name of the topic"
                          },
                          "description": {
                            "type": "string",
                            "description": "Information about the topic"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Post a new topic to the server",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "slug": {
                    "type": "string",
                    "description": "Name of the topic"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the new topic"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The newly created topic",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "slug": {
                      "type": "string",
                      "description": "Name of the topic"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the new topic"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Topic already exists"
          },
          "400": {
            "description": "Missing properties from body"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get an array of all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "description": "Array of users",
                      "items": {
                        "type": "object",
                        "description": "A user registered on the site",
                        "properties": {
                          "username": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "avatar_url": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{username}": {
      "get": {
        "summary": "Get the specified user",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "description": "A user registered on the site",
                      "properties": {
                        "username": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "avatar_url": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/comments/{comment_id}": {
      "delete": {
        "summary": "Delete the specified comment",
        "parameters": [
          {
            "name": "comment_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          },
          "404": {
            "description": "Comment not found"
          }
        }
      },
      "patch": {
        "summary": "Update a comment's vote count",
        "parameters": [
          {
            "name": "comment_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "inc_votes": {
                    "type": "integer",
                    "description": "Amount to increment vote count by"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "comment": {
                      "type": "object",
                      "description": "The updated comment",
                      "properties": {
                        "comment_id": {
                          "type": "integer"
                        },
                        "body": {
                          "type": "string"
                        },
                        "votes": {
                          "type": "integer"
                        },
                        "author": {
                          "type": "string"
                        },
                        "article_id": {
                          "type": "integer"
                        },
                        "created_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "304": {
            "description": "No changes made"
          },
          "404": {
            "description": "Comment not found"
          },
          "400": {
            "description": "Invalid datatype in body"
          }
        }
      }
    },
    "/api/articles": {
      "get": {
        "summary": "Get an array of all articles",
        "parameters": [
          {
            "name": "sort_by",
            "required": false,
            "in": "query",
            "description": "Column to sort data by",
            "schema": {
              "type": "string",
              "default": "created_at",
              "enum": [
                "article_id",
                "title",
                "topic",
                "author",
                "created_at",
                "votes"
              ]
            }
          },
          {
            "name": "order",
            "required": false,
            "in": "query",
            "description": "Specify result ordering",
            "schema": {
              "type": "string",
              "default": "desc",
              "enum": [
                "asc",
                "desc"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topics": {
                      "type": "array",
                      "description": "Array of articles",
                      "items": {
                        "type": "object",
                        "description": "An article from the site",
                        "properties": {
                          "author": {
                            "type": "string",
                            "description": "Username of the author"
                          },
                          "title": {
                            "type": "string",
                            "description": "Title of the article"
                          },
                          "article_id": {
                            "type": "integer",
                            "description": "The unique article ID"
                          },
                          "topic": {
                            "type": "string",
                            "description": "Topic this article falls under"
                          },
                          "created_at": {
                            "type": "string",
                            "description": "Timestamp of article's creation"
                          },
                          "votes": {
                            "type": "integer",
                            "description": "Total score of the article's votes"
                          },
                          "article_img_url": {
                            "type": "string",
                            "description": "URL of the article's image"
                          },
                          "comment_count": {
                            "type": "integer",
                            "description": "How many comments have been received"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters"
          }
        }
      }
    },
    "/api/articles/{article_id}": {
      "get": {
        "summary": "Get an article specified by its unique ID",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "An article from the site",
                  "properties": {
                    "article_id": {
                      "type": "integer",
                      "description": "The unique article ID"
                    },
                    "author": {
                      "type": "string",
                      "description": "Username of the author"
                    },
                    "title": {
                      "type": "string",
                      "description": "Title of the article"
                    },
                    "topic": {
                      "type": "string",
                      "description": "Topic this article falls under"
                    },
                    "body": {
                      "type": "string",
                      "description": "The contents of the article"
                    },
                    "created_at": {
                      "type": "string",
                      "description": "Timestamp of article's creation"
                    },
                    "votes": {
                      "type": "integer",
                      "description": "Total score of the article's votes"
                    },
                    "article_img_url": {
                      "type": "string",
                      "description": "URL of the article's image"
                    },
                    "comment_count": {
                      "type": "integer",
                      "description": "How many comments have been received"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Article not found"
          },
          "400": {
            "description": "Article_id must be a positive integer"
          }
        }
      },
      "patch": {
        "summary": "Update an article's vote count",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "inc_votes": {
                    "type": "integer",
                    "description": "Amount to increment vote count by"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "An article from the site",
                  "properties": {
                    "article_id": {
                      "type": "integer",
                      "description": "The unique article ID"
                    },
                    "author": {
                      "type": "string",
                      "description": "Username of the author"
                    },
                    "title": {
                      "type": "string",
                      "description": "Title of the article"
                    },
                    "topic": {
                      "type": "string",
                      "description": "Topic this article falls under"
                    },
                    "body": {
                      "type": "string",
                      "description": "The contents of the article"
                    },
                    "created_at": {
                      "type": "string",
                      "description": "Timestamp of article's creation"
                    },
                    "votes": {
                      "type": "integer",
                      "description": "Total score of the article's votes"
                    },
                    "article_img_url": {
                      "type": "string",
                      "description": "URL of the article's image"
                    },
                    "comment_count": {
                      "type": "integer",
                      "description": "How many comments have been received"
                    }
                  }
                }
              }
            }
          },
          "304": {
            "description": "No changes made"
          },
          "404": {
            "description": "Article not found"
          },
          "400": {
            "description": "Invalid datatype in body"
          }
        }
      }
    },
    "/api/articles/{article_id}/comments": {
      "get": {
        "summary": "Get an array of an article's comments",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "comments": {
                      "type": "array",
                      "description": "Array of comments",
                      "items": {
                        "type": "object",
                        "description": "Comment",
                        "properties": {
                          "comment_id": {
                            "type": "integer"
                          },
                          "body": {
                            "type": "string"
                          },
                          "votes": {
                            "type": "integer"
                          },
                          "author": {
                            "type": "string"
                          },
                          "article_id": {
                            "type": "integer"
                          },
                          "created_at": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Article not found"
          },
          "400": {
            "description": "Article_id must be a positive integer"
          }
        }
      },
      "post": {
        "summary": "Post a new comment to an article",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Username posting the comment"
                  },
                  "body": {
                    "type": "string",
                    "description": "The contents of the comment"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "comment": {
                      "type": "object",
                      "description": "The newly created comment",
                      "properties": {
                        "comment_id": {
                          "type": "integer"
                        },
                        "body": {
                          "type": "string"
                        },
                        "votes": {
                          "type": "integer"
                        },
                        "author": {
                          "type": "string"
                        },
                        "article_id": {
                          "type": "integer"
                        },
                        "created_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "304": {
            "description": "No changes made"
          },
          "404": {
            "description": "Article or user not found"
          },
          "400": {
            "description": "Invalid datatype in body"
          }
        }
      }
    },
    "/api": {
      "get": {
        "summary": "Gets the api documentation",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  }
}